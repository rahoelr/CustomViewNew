    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <com.example.customviewapp2.MyButton
        android:id="@+id/btn1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        />

</LinearLayout>